import { useState, useEffect } from "react";

function Counter() {
  const [count, setCount] = useState(0);

  useEffect(() => {
    document.title = `Count: ${count}`;
  }, [count]); 

  return (
    <div style={{ textAlign: "center", marginTop: "50px" }}>
      <button onClick={() => setCount(count + 1)}> + </button>
    </div>
  );
}

export default Counter;
